{
  "name": "clean-node-login-api-js",
  "version": "1.0.0",
  "main": "src/main/index.js",
  "repository": "https://github.com/gftf2011/clean-node-login-api-js.git",
  "author": "Gabriel Ferraz <gftf2011@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^14.1.0",
    "@shelf/jest-mongodb": "^2.1.0",
    "commitizen": "^4.2.4",
    "commitlint": "^14.1.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "standard": "^16.0.4",
    "supertest": "^6.1.6"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --clearCache ; jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:all": "jest --clearCache ; jest --watchAll --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "jest --clearCache ; jest --colors --noStackTrace --passWithNoTests --runInBand --watch -c jest-unit-config.js",
    "test:integration": "jest --clearCache ; jest --colors --noStackTrace --passWithNoTests --runInBand --watch -c jest-integration-config.js",
    "test:staged": "jest --clearCache ; jest --silent --passWithNoTests --findRelatedTests --verbose --colors",
    "test:ci": "jest --clearCache ; jest --coverage --noStackTrace",
    "prepare": "husky install",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.4",
    "validator": "^13.7.0"
  }
}
